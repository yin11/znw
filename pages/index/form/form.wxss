.container{
  padding: 0 24rpx;
}
.box{
  position: relative;
}
.tip{
  position: absolute;
  right:10rpx;
  bottom: 25rpx;
  white-space:nowrap; overflow:hidden; text-overflow:ellipsis;
}
textarea{
  border: 1rpx solid #f08f8f;
  border-radius: 5rpx;
  width: 100%;
  height: 190rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  line-height: 1.5;
  padding: 15rpx 20rpx;
}
.tape{
  width: 165rpx;
  text-align: center;
  border-radius: 50%;
  height: 130rpx;
  margin: 36rpx auto 14rpx;
  line-height: 1;
  background: linear-gradient(#ffd155, #f68a02);
  box-shadow: 0 10rpx 10rpx rgba(0, 0, 0, .1);
  padding: 35rpx 0 0 0 ;
}
.tape.on{
  background: linear-gradient(#f99f02, #ffac0d);
}
.ico-mick{
  width: 45rpx;
  height: 65rpx;
  display: block;
  margin: 0 auto 10rpx;
   background:url(data:image/gif;base64,) no-repeat center;
   background-size: cover;
}
.ico-mick.on{
  background:url(data:image/gif;base64,) no-repeat center;
   background-size: cover;
}
.syllable{
  width: 232rpx;
  height: 45rpx;
}
.syllable-bg{
  margin: 0 auto;
  background: url(data:image/gif;base64,) no-repeat;
  background-size: cover;
}
.btn-bottom{
  line-height: 100rpx;
  position: absolute;
  bottom: 0;
  width: 100%;
}
.btn-bottom .btn-r.item{
  flex: 2;
}
.btn-bottom .btn-y.item{
  flex: 1;
}

.btn-close{
  right: 88rpx;
  top: 240rpx;
}


