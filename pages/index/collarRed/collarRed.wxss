

page{
  background: #e22020;
}
.rule{
  position: fixed;
  right: 18rpx;
  top: 22rpx;
  font-size: 28rpx;
  height: 50rpx;
  line-height: 50rpx;
  background: rgba(0, 0, 0, .3);
  padding: 0 22rpx;
  border-radius: 50rpx;
}
.start{
  width: 308rpx;
  margin: 60rpx auto 45rpx;
}
.con-bg{
  height:570rpx;
  width:475rpx;
  display: block;
  margin: 288rpx auto 0;
}
.blessings{
  background: rgba(0, 0, 0, .1);
  line-height: 48rpx;
  margin: 20rpx 50rpx 110rpx 50rpx;
  position: relative;
  padding: 10rpx 40rpx;
}
.blessings::before,.blessings::after{
  content: "";
  width: 26rpx;
  height: 20rpx;
  display: block;
  position: absolute;
}
.blessings::before{
  background: url(data:image/gif;base64,) no-repeat center;
  background-size: cover;
  left: -15rpx;
  top: 0;
}
.blessings::after{
  background: url(data:image/gif;base64,) no-repeat center;
  background-size: cover;
  right: -15rpx;
  bottom: 0;
}
.blessings text{
  display: inline-block;
  width: 100%;
}
.blessings .fz32{
  margin: 20rpx 0; 
}
.from{
  text-align: right;
}

/**底部卡**/
.btn-bottom {
  line-height:100rpx;
  position:fixed;
  bottom:0;
  width:100%;
}
.btn-bottom .btn-f.item {
  flex:2;
}
.btn-f{
  background:linear-gradient(#a00000, #c20000);
  color: #fff;
}
.btn-y{
  position: relative;
}
.btn-send{
  position: absolute;
  width: 100%;
  height: 100rpx;
  background: red;
  opacity: 0.1
}

/**音频点击再来一次**/
.ico-reset{
  background: rgba(0, 0, 0, .2) url(data:image/gif;base64,) no-repeat center;
  background-size: 25rpx;
}