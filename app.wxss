/**浮动**/
.clearfix:after { content:""; display:block; height:0; visibility:hidden; clear:both; }
.clearfix { zoom:1; }
.fl-l{float: left;}
.fl-r{float: right;}

/****/
button{
  position: inherit;
  padding: 0;
  margin: 0;
}

/**flex布局**/
.flex-box {
  display:flex;
}
.flex-box .item {
  flex:1;
  text-align:center;
}

/**输入框**/
.input-title{
  line-height: 84rpx;
  margin-top: 40rpx;
  display: block;
}
.input-box{
  border: 1rpx solid #f08f8f;
  border-radius: 5rpx;
  width: 100%;
  font-size: 30rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  line-height: 80rpx;
  height: 80rpx;
}

/**按钮**/
.btn{
  height: 80rpx;
  margin: 0 auto;
  line-height: 80rpx;
  text-align: center;
  border-radius: 80rpx;
  box-shadow: 0 20rpx 20rpx rgba(0, 0, 0, .1);
  letter-spacing:8rpx;
}
.btn-y{
  background: linear-gradient(#ffd155, #f68a02);
}
.btn-r{
  background: linear-gradient(#ff4242, #db1b1b);
}

/**弹窗遮罩**/
.mask{
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .7);
  top: 0;
  left: 0;
  z-index: 4;
  /*visibility: hidden;*/
}
.btn-close{
  width: 60rpx;
  height: 60rpx;
  background: url(data:image/gif;base64,) no-repeat center;
  background-size: cover;
  position: absolute;
}

/**音频ico**/
.misic{
  position: absolute;
  right: 66rpx;
  top: 484rpx;
  width: 60rpx;
  height: 60rpx;
  background: rgba(0, 0, 0, .2);
  border-radius: 50%;
}

/**拆红包**/
.split{
